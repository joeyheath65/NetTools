{
  "manifest_version": 3,
  "name": "Enhance",
  "version": "1.0.1",
  "description": "Internal extension for enhancing network infrastructure management portals",
  "author": "HEB Internal",
  "permissions": [
    "storage",
    "scripting",
    "alarms",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content_loader.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Enhance - Network Infrastructure Management"
  },
  "options_page": "ui/options.html",
  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "enhance@heb.internal",
      "strict_min_version": "109.0"
    }
  }
}

